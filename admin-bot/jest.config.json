{
  "verbose": true,
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": ["<rootDir>/test"],
  "testRegex": ".*(spec.ts$)",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "coverage",
  "maxConcurrency": 1
}